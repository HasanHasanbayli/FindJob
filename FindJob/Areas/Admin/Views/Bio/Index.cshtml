@model Bio
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<input type="hidden" id="hidden" value="bio"/>
<div>
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <a asp-action="Update" class="btn btn bg-success">Update Bio</a>
                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th>
                            Logo
                        </th>
                        <th>
                            Mobile
                        </th>
                        <th>
                            Mobile2
                        </th>
                        <th>
                            Fax
                        </th>
                        <th>
                            Adress
                        </th>
                        <th>
                            Facebook
                        </th>
                        <th>
                            Twitter
                        </th>
                        <th>
                            Linkedin
                        </th>
                        <th>
                            Youtube
                        </th>
                    </tr>
                    </thead>
                    <tbody style="cursor:pointer">
                    <tr>
                        <td>
                            @if (Model.Logo != null)
                            {
                                <img src="~/assets/images/@Model.Logo" style="width:120px; height:48px; border-radius:0%" alt="image"/>
                            }
                            else
                            {
                                <img src="~/assets/images/Users/prof.PNG"/>
                            }
                        </td>
                        <td>
                            @Model.Mobile
                        </td>
                        <td>
                            @Model.Mobile2
                        </td>
                        <td>
                            @Model.Fax
                        </td>
                        <td>
                            @Model.Adress
                        </td>
                        <td>
                            @Model.Facebook
                        </td>
                        <td>
                            @Model.Twitter
                        </td>
                        <td>
                            @Model.Linkedin
                        </td>
                        <td>
                            @Model.Youtube
                        </td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>