@model ContactFromUser
@{
    ViewData["Title"] = "SendEmail";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Send Email</h4>
            <p class="card-description">
                Send Email
            </p>
            <form class="forms-sample" method="post">
                <div class="text-danger" asp-validation-summary="All"></div>
                <div class="form-group">
                    <input type="hidden" id="Email" name="Email" class="form-control"/>
                </div>
                <div class="form-group">
                    <label>Subject</label>
                    <input type="text" id="Subject" name="Subject" class="form-control"/>
                </div>
                <div class="form-group">
                    <label>Message</label><br/>
                    <textarea type="text" id="Message" name="Message" cols="150" rows="5"></textarea>
                </div>
                <button type="submit" class="btn btn-warning">Send</button>
                <a asp-controller="Contact" asp-action="Index" class="btn btn-dark">Go Back</a>
            </form>
        </div>
    </div>
</div>