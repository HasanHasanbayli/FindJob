@model Statistics
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="col-12 grid-margin">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Create Blog</h4>
            <form class="form-sample" method="post" enctype="multipart/form-data">
                <p class="card-description">
                    Statistics info
                </p>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label"> Title:</label>
                            <div class="col-sm-9">
                                <input asp-for="Title" class="form-control" placeholder="Input Title"/>
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Photo:</label>
                            <div class="col-sm-9">
                                <input asp-for="Photo" class="form-control"/>
                                <span asp-validation-for="Photo" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Data Count:</label>
                            <div class="col-sm-9">
                                <input asp-for="DataCount" placeholder="Font Description" class="form-control"/>
                                <span asp-validation-for="DataCount" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <input type="submit" name="name" value="Create" class="btn btn-primary"/>
                <a asp-controller="Blog" asp-action="Index" class="btn btn-light">Cancel</a>
            </form>
        </div>
    </div>
</div>