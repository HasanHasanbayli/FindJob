@model IEnumerable<UserVM>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="">
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                Image
                            </th>
                            <th>
                                Full Name
                            </th>
                            <th>
                                UserName
                            </th>
                            <th>
                                Email
                            </th>
                            <th>
                                Location
                            </th>
                            <th>
                                Role
                            </th>
                            <th>
                                Company Name
                            </th>
                            <th>
                                Status
                            </th>
                            <th>
                                Settings
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (UserVM user in Model)
                        {
                            <tr>
                                <td class="py-1">
                                    @if (user.Image != null)
                                    {
                                        <img src="~/assets/images/Users/@user.Image" alt="image" />
                                    }
                                    else
                                    {
                                        <img src="~/assets/images/Users/prof.PNG" />
                                    }
                                </td>
                                <td>
                                    @user.FullName
                                </td>
                                <td>
                                    @user.UserName
                                </td>
                                <td>
                                    @user.Email
                                </td>
                                <td>
                                    @user.Location
                                </td>
                                <td>
                                    @user.Role
                                </td>
                                <td>
                                    @user.CompanyName
                                </td>
                                @if (user.IsActivated)
                                {
                                    <td style="color:lawngreen">
                                        Active
                                    </td>
                                }
                                else
                                {
                                    <td style="color:red">
                                        Disable
                                    </td>
                                }
                                <td>
                                    @if (user.IsActivated)
                                    {
                                        <a asp-action="Active" asp-route-id="@user.Id" class="btn btn-link btn-fw"><i class="mdi mdi-account-off"></i></a>
                                    }
                                    else
                                    {
                                        <a asp-action="Disable" asp-route-id="@user.Id" class="btn btn-link btn-fw"><i class="mdi mdi-account-check"></i></a>
                                    }
                                    <a asp-action="ChangeRole" asp-route-id="@user.Id" class="btn btn-link btn-fw">
                                        <i class="mdi mdi-account-convert"></i>
                                    </a>
                                    <a asp-action="ChangePassword" asp-route-id="@user.Id" class="btn btn-link btn-fw">
                                        <i class="mdi mdi-account-key"></i>
                                    </a>
                                    <a asp-action="DeleteUser" asp-route-id="@user.Id" class="btn btn-link btn-fw">
                                        <i class="mdi mdi-account-remove"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>